<div class="comment-section">
    @if (_loading)
    {
        <div class="comment-section-skeleton">
            <div class="comment-loading-spinner">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="animate-spin">
                    <path d="M21 12a9 9 0 11-6.219-8.56"></path>
                </svg>
                <span>评论加载中...</span>
            </div>
        </div>
    }
    else
    {
        <div class="comment-section__header">
            <div class="comment-section__title">
                <span>评论</span>
                <span class="comment-section__count">@_comments.TotalItemCount</span>
            </div>
            <button class="comment-section__refresh-btn" title="刷新评论" @onclick="RefreshAsync">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M23 4v6h-6"></path>
                    <path d="M1 20v-6h6"></path>
                    <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
                </svg>
            </button>
        </div>

        @if (Node != null && !string.IsNullOrEmpty(Relation) && string.IsNullOrEmpty(_replyId))
        {
            <div class="comment-form-wrapper">
                <CommentForm Node="@Node" Relation="@Relation" SendCommentAsync="SendAsync"></CommentForm>
            </div>
        }

        <CommentList
            @ref="_commentList"
            Comments="@_comments.ToList()"
            TotalPageCount="@_comments.TotalPageCount"
            CurrentPageIndex="@_comments.CurrentPageIndex"
            OnReply="HandleReply"
            OnCancelReply="CancelReply"
            ReplyId="@_replyId"
            SendCommentAsync="SendAsync"
            ToNextPageAsync="NextAsync"/>
    }
</div>