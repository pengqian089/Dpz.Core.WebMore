<div class="comment-section">
    @if (_loading)
    {
        <div class="comment-list">
            @* Generate 3 fake skeleton items *@
            @for (int i = 0; i < 3; i++)
            {
                <div class="skeleton-wrapper">
                    <div class="skeleton-comment">
                        <div class="skeleton-comment__avatar skeleton skeleton--circle"></div>
                        <div class="skeleton-comment__body">
                            <div class="skeleton skeleton--text skeleton--w-30"></div>
                            <div class="skeleton skeleton--text skeleton--w-20"></div>
                            <div style="margin-top: 10px;">
                                <div class="skeleton skeleton--text skeleton--w-100"></div>
                                <div class="skeleton skeleton--text skeleton--w-80"></div>
                                <div class="skeleton skeleton--text skeleton--w-60"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="comment-section__header">
            <div class="comment-section__title">
                <span>评论</span>
                <span class="comment-section__count">@_comments.TotalItemCount</span>
            </div>
            <button class="comment-section__refresh-btn" title="刷新评论" @onclick="RefreshAsync">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M23 4v6h-6"></path>
                    <path d="M1 20v-6h6"></path>
                    <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
                </svg>
            </button>
        </div>

        @if (!string.IsNullOrEmpty(Relation) && string.IsNullOrEmpty(_replyId))
        {
            <div class="comment-form-wrapper">
                <CommentForm Node="@Node" Relation="@Relation" SendCommentAsync="SendAsync"></CommentForm>
            </div>
        }

        <CommentList
            @ref="_commentList"
            Comments="@_comments.ToList()"
            TotalPageCount="@_comments.TotalPageCount"
            CurrentPageIndex="@_comments.CurrentPageIndex"
            OnReply="HandleReply"
            OnCancelReply="CancelReply"
            ReplyId="@_replyId"
            SendCommentAsync="SendAsync"
            ToNextPageAsync="NextAsync"/>
    }
</div>