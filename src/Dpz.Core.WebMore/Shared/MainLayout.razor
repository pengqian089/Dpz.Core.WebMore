@inherits LayoutComponentBase
<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<div class="site-wrapper">
    <NavMenu></NavMenu>
    <main class="site-main">
        @Body
    </main>
    <footer class="site-footer">
        <div class="container">
            <p>
                <a href="https://beian.miit.gov.cn/" target="_blank">鄂ICP备20001883号-1</a>
            </p>
            <p class="mt-1" id="app-version">
                当前版本：@Program.Version
                <Tooltip Text="@_connectionStatus.Title">
                    <span class="connection-status @_connectionStatus.Class"></span>
                </Tooltip>
            </p>
            <p>&copy; @DateTime.Now.Year Dpz.Core.Blazor</p>
        </div>
    </footer>

    <div class="back-to-top" title="返回顶部">
        <i class="fa fa-arrow-up"></i>
    </div>

    <MusicPlayer/>
    <Dpz.Core.WebMore.Shared.Components.Dialog.DialogContainer/>
</div>
