@namespace Dpz.Core.WebMore.Shared.Components

<div class="tooltip @Class" 
     @attributes="AdditionalAttributes" 
     @ref="_triggerElement"
     @onmouseenter="Show" 
     @onmouseleave="Hide"
     @oncontextmenu="OnContextMenu"
     @oncontextmenu:preventDefault="_preventContextMenu">
    @ChildContent
    
    <span @ref="_contentElement" 
          popover="manual" 
          class="tooltip__content">
        @Text
    </span>
</div>