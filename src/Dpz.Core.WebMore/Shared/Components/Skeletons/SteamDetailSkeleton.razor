<div class="steam-container">
    <div class="steam-back-btn">
        <div class="skeleton skeleton--text skeleton--w-20"></div>
    </div>

    <div class="steam-detail-header">
        <div class="steam-detail-header__cover">
            <div class="skeleton skeleton--block" style="width: 100%; height: 100%;"></div>
        </div>
        <div class="steam-detail-header__info">
            <h1 class="steam-detail-header__title">
                <div class="skeleton skeleton--title skeleton--w-60"></div>
            </h1>

            <div class="steam-detail-header__meta">
                <div class="steam-detail-header__meta-item">
                    <div class="skeleton skeleton--text skeleton--w-40" style="width: 120px;"></div>
                </div>
                <div class="steam-detail-header__meta-item">
                    <div class="skeleton skeleton--text skeleton--w-40" style="width: 100px;"></div>
                </div>
            </div>

            <div class="steam-summary">
                <div class="steam-summary__stats">
                    <div class="skeleton skeleton--text skeleton--w-30"></div>
                    <div class="skeleton skeleton--text skeleton--w-20"></div>
                </div>
                <div class="steam-summary__progress-track">
                    <div class="skeleton skeleton--block" style="height: 100%;"></div>
                </div>
            </div>

            <div class="steam-stats-grid">
                <div class="steam-stat-box">
                    <div class="skeleton skeleton--text skeleton--w-40" style="margin: 0 auto 5px;"></div>
                    <div class="skeleton skeleton--text skeleton--w-60" style="height: 0.8em; margin: 0 auto;"></div>
                </div>
                <div class="steam-stat-box">
                    <div class="skeleton skeleton--text skeleton--w-40" style="margin: 0 auto 5px;"></div>
                    <div class="skeleton skeleton--text skeleton--w-60" style="height: 0.8em; margin: 0 auto;"></div>
                </div>
                <div class="steam-stat-box">
                    <div class="skeleton skeleton--text skeleton--w-40" style="margin: 0 auto 5px;"></div>
                    <div class="skeleton skeleton--text skeleton--w-60" style="height: 0.8em; margin: 0 auto;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="steam-group">
        <div class="steam-group__header">
            <h2 class="steam-group__title">
                <div class="skeleton skeleton--title skeleton--w-30"></div>
            </h2>
        </div>
        <div class="steam-group__content">
            @for (var i = 0; i < 3; i++)
            {
                <div class="steam-achievement">
                    <div class="steam-achievement__icon">
                        <div class="skeleton skeleton--block" style="border-radius: 4px;"></div>
                    </div>
                    <div class="steam-achievement__info">
                        <div class="steam-achievement__name">
                            <div class="skeleton skeleton--text skeleton--w-40"></div>
                        </div>
                        <div class="steam-achievement__desc">
                            <div class="skeleton skeleton--text skeleton--w-90"></div>
                        </div>
                    </div>
                    <div class="steam-achievement__status">
                        <div class="skeleton skeleton--button skeleton--w-80" style="height: 24px;"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

