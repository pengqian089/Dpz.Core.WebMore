<div class="search-box">
    <div class="search-box__form">
        <input
            type="text"
            name="keyword"
            @bind="_keyword"
            @onkeyup="HandleKeyUp"
            required
            placeholder="搜索文章..."
            class="search-box__input"
            autocomplete="off">
        <button @onclick="OnSearch" type="button" class="search-box__button" aria-label="搜索">
            <i class="fa fa-search"></i>
        </button>
    </div>
</div>